<div class="offset3 span6">
  <h2 class='offset1'><%= t '.enter' %></h2>

  <%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => { :class => 'form-horizontal offset1'}) do |f| %>
    <div class='control-group'>  
      <%= f.label :email, :class=>'control-label' %>
      <div class='controls'><%= f.email_field :email %></div>

      <%= f.label :password, :class=>'control-label' %>
      <div class='controls'><%= f.password_field :password %></div>

      <% if devise_mapping.rememberable? -%>
        <%= f.label :remember_me, :class=>'control-label' %>
        <div class='comtrols'><%= f.check_box :remember_me %> </div>
      <% end -%>

      <div class='submit-margin'><%= f.submit(t('.sign_in')) %></div>
    </div>      
  <% end %>

<%= render "devise/shared/links" %>
</div>

