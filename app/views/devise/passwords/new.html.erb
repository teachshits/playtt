<% print_devise_errors(devise_error_messages!) %>
<div class="offset3 span6">
  <h2 class='offset1'><%= t '.forgot_your_password' %></h2>

  <%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post, :class => 'form-horizontal offset1' }) do |f| %>
     <div class='control-group'>
      <%= f.label :email, :class=>'control-label' %>
      <div class='controls'><%= f.email_field :email %></div>

      <div class='submit-margin'><%= f.submit( t('.send_me_reset_password_instructions')) %></div>
    </div
  <% end %>

  <%= render "devise/shared/links" %>
</div>